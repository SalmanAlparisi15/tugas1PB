<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0CCBE"
    android:orientation="vertical"
    android:layout_margin="16sp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvlittle"
        android:text="SELAMAT DATANG "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgFFXVI"
        android:layout_width="106dp"
        android:layout_height="152dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/images" />

    <ImageView
        android:id="@+id/imgSof"
        android:layout_width="109dp"
        android:layout_height="130dp"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="-140dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/_63db7fd_c9a1_493d_9afc_b71fc2b77377" />


            <CheckBox
            android:id="@+id/btnSof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Sof"
            android:text="Street Of Fighters     Rp 520.000"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etSofQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="number"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/btnFFXVI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="FFXVI"
            android:text="Final Fantasy XVI     Rp 580.000"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etFFXVIQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="number"
            android:textColor="@color/black" />


        <CheckBox
            android:id="@+id/btnSpidermen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Spidermen"
            android:text="Spidermen Miles Morales     Rp 630.000"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etSpiderQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:inputType="number"
            android:textColor="@color/black" />


    <RadioGroup
        android:id="@+id/etGroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/btnGold"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="GOLD"
            android:textColor="#FCDC2A"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/btnDiamond"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-50dp"
            android:text="DIAMOND"
            android:textColor="#6420AA"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/btnnoMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="NO MEMBER"
            android:textStyle="bold"
            />

    </RadioGroup>


    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="DONE"
        android:textSize="22dp" />

    <TextView
        android:gravity="center"
        android:textSize="13sp"
        android:textStyle="italic"
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textColor="@color/black"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imgSpidermen"
        android:layout_width="115dp"
        android:layout_height="129dp"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="-733dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/images__1_" />


</LinearLayout>